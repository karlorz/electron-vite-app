{
  "name": "electron-vite-react",
  "version": "1.0.0",
  "description": "Electron Vite React Boilerplate",
  "main": "dist-electron/main.js",
  "homepage": "https://karlorz.github.io/electron-vite-app",
  "scripts": {
    "dev": "vite",
    "dev:electron": "cross-env NODE_ENV=development vite",
    "build": "tsc && vite build",
    "build:electron": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "build": {
    "appId": "com.electron.electronviteapp",
    "productName": "Electron Vite App",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "cross-env": "^7.0.3",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3",
    "electron-devtools-installer": "^4.0.0",
    "eslint": "^8.45.0",
    "gh-pages": "^6.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.7",
    "vite-plugin-electron": "^0.11.2"
  }
}
